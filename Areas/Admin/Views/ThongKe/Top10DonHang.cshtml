@{
    ViewData["Title"] = "Top 10 Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
@{
    List<Lollipop_boutique.Areas.Admin.Models.dondathang> list_ddh = (List<Lollipop_boutique.Areas.Admin.Models.dondathang>)ViewBag.ListDH; 
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <h5>10 đơn đặt hàng lớn nhất</h5>
             <a href="~/Admin/Home/Index" style="margin-bottom:2%; margin-top:2%; margin-left:5%" class="btn btn-success">Back to Dashboard</a> 
        </div>
        <div class="m-t-30">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã đơn đặt hàng</th>
                            <th>Mã khách hàng</th>
                            @*<th>MaVoucher</th>*@
                            <th>Tổng đơn hàng</th>
                            <th>Số tiền giảm</th>
                            <th>Thành tiền</th>
                            <th>Mã nhân viên</th>
                            <th>Ngày đặt hàng</th>
                            @*<th>Mã nhà vận chuyển</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @if (list_ddh != null)
                        {
                            foreach (var item in list_ddh)
                            {
                                <tr>
                                    <td>
                                        @item.MaDDH
                                    </td>
                                    <td>
                                        @item.MaKH
                                    </td>
                                    @*<td>
                                        @item.MaVoucher
                                    </td>*@
                                    <td>
                                        @item.TongDonHang.ToString("#,##0") VNĐ
                                    </td>
                                    <td>
                                        @item.SoTienGiam.ToString("#,##0") VNĐ
                                    </td>
                                    <td>
                                        @item.ThanhTien.ToString("#,##0") VNĐ
                                    </td>
                                    <td>
                                        @item.MaNV
                                    </td>
                                    <td>
                                        @String.Format("{0:dd/MM/yyyy}", item.NgayDatHang)
                                        @*@item.NgayDatHang*@
                                    </td>
                                    @*<td>
                                        @item.MaNvc
                                    </td>*@
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


