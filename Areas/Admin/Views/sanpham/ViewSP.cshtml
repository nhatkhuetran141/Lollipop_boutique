@model Lollipop_boutique.Areas.Admin.Models.sanpham
@{
    ViewData["Title"] = "Update Customer";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/admin/css/EditCustomer.css" rel="stylesheet"/>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<title>Bootstrap 4 DatePicker</title>*@
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
            
</head>        
<div class="card-header"><h3>Sản phẩm: @Model.TenSP</h3></div>
<div class="container">
    <form>
        <div class="Viewcustomer" style="border-color: coral;border-radius: 25px;margin-top: 5%; padding: 3% 3% 7% 3%; border: 2px solid #aaa;">
            <a href="~/Admin/sanpham/LietKeSP" style="margin-bottom:2%" class="btn btn-success">Back to Product Management</a>              
            <div class="row body_insertcustomer">
                <div class="col-md">            
                        <!-- MaKH input -->
                    <div class="input_field">
                                    <div class="input_field_title">Mã sản phẩm*</div>
                                    <input type="text" id="idsp" name="MaSP" placeholder="VD:KH01" value="@Model.MaSP" disabled="disabled"/>                   
                                </div>
                                <!-- Name -->
                                <div class="input_field">
                                    <div class="input_field_title">Tên sản phẩm*</div>
                                    <input type="text" id="namesp" name="TenSP" placeholder="Nguyễn Văn A" value="@Model.TenSP"/>
                                </div>                  
                                <!-- street address -->                                
                                <div class="input_field">
                                    <div class="input_field_title">Số lượng*</div>
                                    <input type="text" id="quantity" name="SoLuong" placeholder="SĐT"value="@Model.SoLuong">
                                </div>
                                 <div class="input_field">
                                    <div class="input_field_title">Giá*</div>
                                    <input type="text" id="price" name="Price" placeholder="200000"value="@Model.GiaTien">
                                </div>
                            </div>
                            <!--ben phai -->
                            <div class="col-md">  
                                <div class="input_field">
                                    <div class="input_field_title">Danh mục</div>
                                    <select class="input_field_selector" id="madanhmuc" name="MaDanhMuc"value="@Model.MaDanhMuc">
                                        <option value="1">Nón lưới trai</option>
                                        <option value="2">Nón len</option>    
                                        <option value="3">Nón vành rộng</option>                      
                                    </select>
                                </div> 
                                 <div class="input_field">
                                    <div class="input_field_title">Nhà cung cấp</div>
                                    <select class="input_field_selector" id="mancc" name="MaNCC"value="@Model.MaNCC">
                                        <option value="1">New Era</option>
                                        <option value="2">Adidas</option>    
                                        <option value="3">Nike</option>                     
                                    </select>
                                </div> 
                                <div class="input_field">
                                    <div class="input_field_title">Mô tả</div>
                                    <input type="text" id="mota" name="MoTa" placeholder="Mau, size"value="@Model.MoTa">
                                </div>
                            </div>                                  
                </div>    
            <a href="~/Admin/hinhanh/ViewHA?MaSP=@Model.MaSP" class="btn btn-primary btn_update_customer">Update Image</a>
            <a href="javascript:void(0)" class="btn btn-success btn_updatecustomer" value="Update" style="float:right">Update</a>       
        </div>            
    </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $(".btn_updatecustomer").click(function () {
            console.log ('Da vao click');    
            var id =$('#idsp').val();
            var ten = $('#namesp').val();
            var quantity = $('#quantity').val();
            var price = $('#price').val();
            var madanhmuc = $('#madanhmuc').val();           
            var mancc =$('#mancc').val();
            var mota =$('#mota').val();
            console.log(id,ten, quantity, price, madanhmuc, mancc, mota);
            $.ajax({
                url: '/Admin/sanpham/UpdateSP',
                method: "GET",
                 data: {MaSP:id, TenSP:ten, GiaTien:price, SoLuong:quantity, MaDanhMuc: madanhmuc, MaNCC:mancc, MoTa:mota},
                success: function (data) {
                    //alert("Them thông tin thành công");
                    //console.log('Thanh cong');                   
                    alert("Update Product Successful");
                    //$('#test').attr("class","alert alert-success");
                    //$('#test').html('Da Them thanh cong');
                    console.log("dang LietKeKH");
                },
                error: function (data) {
                    alert('Error');
                }
            });
          
        });
    });
</script>
   
    

